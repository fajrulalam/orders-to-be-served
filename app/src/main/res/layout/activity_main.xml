<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#0D4C4C4C">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Aggregation Section (Left Sidebar) -->
        <LinearLayout
            android:id="@+id/aggregationSection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:visibility="visible">

            <!-- Apple-style Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rekap Pesanan"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="-0.02" />

                <!-- Minimal Close Button -->
                <ImageButton
                    android:id="@+id/toggleAggregationButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="Hide Summary"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:tint="#8E8E93"
                    app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

            </RelativeLayout>

            <!-- Subtle divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E5E5EA" />

            <!-- Aggregated Items RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/aggregationRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>

        <!-- Floating Action Button to Show Aggregation (appears when hidden) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/showAggregationFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="24dp"
            android:contentDescription="Show Summary"
            android:visibility="gone"
            app:backgroundTint="#4CAF50"
            app:tint="@android:color/white"
            app:srcCompat="@android:drawable/ic_menu_info_details"
            app:elevation="8dp" />

        <!-- Main Orders RecyclerView (Full Width) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/aggregationSection"
            android:background="@android:color/transparent"
            android:clipToPadding="false"
            android:paddingTop="4dp"
            android:paddingBottom="80dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <!-- Single Toggle FAB (Bottom Right) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/toggleActivityFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:contentDescription="Recently Served"
            app:backgroundTint="#007AFF"
            app:tint="@android:color/white"
            app:srcCompat="@drawable/ic_baseline_history_24"
            app:elevation="8dp"
            app:fabSize="normal" />

        <!-- Badge for order count (hidden by default) -->
        <TextView
            android:id="@+id/jumlahPesanan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>